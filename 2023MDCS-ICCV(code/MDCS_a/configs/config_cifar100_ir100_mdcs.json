{
    "name": "Imbalance_CIFAR100LT_IR100_mdcs",
    "n_gpu": 1,

    "arch": {
        "type": "ResNet32Model",
        "args": {
            "num_classes": 100,
            "reduce_dimension": true,
            "use_norm": true,
            "returns_feat": true,
            "num_experts": 3
        }
    },
    "data_loader": {
        "type": "ImbalanceCIFAR100DataLoader",
        "args":{
            "data_dir": "./data/CIFAR-100",
            "batch_size": 128,
            "shuffle": true,
            "num_workers": 4,
            "imb_factor": 0.01
        }
    },
    "optimizer": {
        "type": "SGD",
        "args":{
            "lr": 0.1,
            "weight_decay": 5e-4,
            "momentum": 0.9,
            "nesterov": true
        }
    },
    "add_extra_info": true,
    "loss": {
        "type": "MDCSLoss",
        "args": {
            "tau": 2
        }
    },
    "metrics": [
        "accuracy"
    ],
    "lr_scheduler": {
        "type": "CustomLR",
        "args": {
            "//": "200 epoch: step1:160, step2:180 // 400 epoch: step1:200, step2:320, step3:380" ,
            "step1": 160,
            "step2": 180,
            "gamma": 0.1,
            "warmup_epoch": 20
        }
    },
    "trainer": {
        "epochs": 200,
        "save_dir": "checkpoint/Cifar100/ir100/mdcs_e200_inv2_bs128_lr0.1",
        "save_period": 100,
        "verbosity": 2,
        "monitor": "max val_accuracy",
        "tensorboard": false
    }
}
